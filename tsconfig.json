{
    "compilerOptions": {
      "target": "es6",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "removeComments": true,
      "sourceMap": true,
      "declaration": true,
      "baseUrl": "./",
      "jsx": "react",
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  