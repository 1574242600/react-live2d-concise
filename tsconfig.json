{
    "compilerOptions": {
      "target": "es6",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "removeComments": true,
      "sourceMap": true,
      "declaration": true,
      "baseUrl": "./",
      "jsx": "react",
      "paths": {
        "@framework/*": ["./lib/Framework/src/*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "lib/Core/*.ts",
    ],
    "exclude": [
      "node_modules",
    ]
  }
  