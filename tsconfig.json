{
    "compilerOptions": {
      "target": "es5",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "removeComments": true,
      "sourceMap": true,
      "declaration": true,
      "baseUrl": "./",
      "jsx": "react",
      "types": [
        "node"
      ]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "lib/Core/*.ts",
    ],
    "exclude": [
      "node_modules",
    ]
  }
  